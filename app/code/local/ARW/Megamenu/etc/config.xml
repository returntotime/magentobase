<?xml version="1.0"?>
<config>
    <modules>
        <ARW_Megamenu>
            <version>2.0.2</version>
        </ARW_Megamenu>
    </modules>
    <frontend>
        <layout>
            <updates>
                <megamenu module="megamenu">
                    <file>arw_megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
	    <acl>
	        <resources>
	            <all>
	                <title>Allow Everything</title>
	            </all>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <config>
	                                <children>
										<megamenu translate="title" module="megamenu">
											<title>Megamenu</title>
											<sort_order>1</sort_order> 
	                                    </megamenu>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
	    </acl>
    </adminhtml>
    <global>
        <blocks>
            <megamenu>
                <class>ARW_Megamenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>ARW_Megamenu_Helper</class>
            </megamenu>
        </helpers>
        <models>
            <megamenu>
                <class>ARW_Megamenu_Model</class>
            </megamenu>
        </models>
		<resources>
			<megamenu_setup>
				<setup>
					<module>ARW_Megamenu</module>
					 <class>ARW_Megamenu_Model_Resource_Eav_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</megamenu_setup>>
			<megamenu_write>
				<connection>
					<use>core_write</use>
				</connection>
			</megamenu_write>
			<megamenu_read>
				<connection>
					<use>core_read</use>
				</connection>
			</megamenu_read>
		</resources>
		
    </global>
    <default>
			<megamenu>
				<category_label>
				<!-- 	<label1>HOT!</label1>
					<label2>SALE</label2> -->
					<label>HOT!,SALE,NEW</label>
				</category_label>
				 <header>
	                <hide_on_mobile>0</hide_on_mobile>
	                <compare>1</compare>
           		 </header>
				 <general>
					<use_jquery>0</use_jquery>
					<depth>4</depth>
					<!-- <enable_ver_megamenu>1</enable_ver_megamenu> -->
				 </general>
	            <menu>
					<enable_top_megamenu>1</enable_top_megamenu>
	                <effect>show</effect>
	                <home>1</home>
	                <enable_custom>1</enable_custom>
	                <static_identifier>featured_product;menu_icons:right</static_identifier>
	                <show_if_no_children>0</show_if_no_children>
	                <url_key></url_key>
	            </menu>
				<sidemenu>
					<enable_category_left>1</enable_category_left>
					<enable_category_right></enable_category_right>
					<enable_home_left></enable_home_left>
					<enable_home_right></enable_home_right>
					<enable_cms_left></enable_cms_left>
					<enable_cms_right></enable_cms_right>
					<enable_product_left></enable_product_left>
					<enable_product_right></enable_product_right>
					<block_name>Categories</block_name>
					<parent>current</parent>
					
					<fallback>1</fallback>
					<block_name_fallback></block_name_fallback>
					<hide_on_mobile>1</hide_on_mobile>
					<hide_laynav_categories>1</hide_laynav_categories>
				</sidemenu>
			</megamenu>
	</default>
</config>