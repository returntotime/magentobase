<config>
    <modules>
        <ARW_Brand>
            <version>1.0</version>
        </ARW_Brand>
    </modules>
    <frontend>
        <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>ARW_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
        <layout>
            <updates>
                <brand>
                    <file>arw_brand.xml</file>
                </brand>
            </updates>
        </layout>
        <events>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <arw_brand_model_observer>
                        <class>brand/observer</class>
                        <method>addToTopmenu</method>
                    </arw_brand_model_observer>
                </observers>
            </page_block_html_topmenu_gethtml_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <brand>
                <use>admin</use>
                <args>
                    <module>ARW_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <brand>
                    <file>arw_brand.xml</file>
                </brand>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <brand>
                <class>ARW_Brand_Model</class>
                <resourceModel>brand_mysql4</resourceModel>
            </brand>
            <brand_mysql4>
                <class>ARW_Brand_Model_Mysql4</class>
                <entities>
                    <brand>
                        <table>arw_brand</table>
                    </brand>
                    <product>
                        <table>arw_brand_products</table>
                    </product>
                </entities>
            </brand_mysql4>
        </models>
        <resources>
            <brand_setup>
                <setup>
                    <module>ARW_Brand</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <blocks>
            <brand>
                <class>ARW_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
            <brand>
                <class>ARW_Brand_Helper</class>
            </brand>
        </helpers>
    </global>
    <default>
        <brand>
            <general>
                <add_to_topmenu>1</add_to_topmenu>
                <title_link>Shop By Brand</title_link>
            </general>
            <widget>
                <load_jquery>1</load_jquery>
                <load_slider>1</load_slider>
            </widget>
            <page>
                <url_key>shop-by-brand</url_key>
                <title>Shop By Brand</title>
                <template_list>1column</template_list>
                <template_view>2columns-left</template_view>
                <layered_navigation_view>top-left</layered_navigation_view>
                <icon_width>150</icon_width>
                <icon_height>150</icon_height>
                <image_width>800</image_width>
                <image_height>500</image_height>
                <show_breadcrumbs>1</show_breadcrumbs>
            </page>
            <product>
                <show_brand>1</show_brand>
                <show_related_products>1</show_related_products>
                <related_products_limit>8</related_products_limit>
                <related_products_sort_by>random</related_products_sort_by>
                <related_products_sort_dir>ASC</related_products_sort_dir>
            </product>
        </brand>
    </default>
</config>