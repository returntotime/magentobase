<?php
/**
 * Template for Mage_Page_Block_Html
 */
?>
<!doctype html>
<html lang="<?php echo $this->getLang() ?>">
<head>
<?php echo $this->getChildHtml('head') ?>
</head>
<?php
$body_style         = Mage::helper('sebian')->getCfgLayout('layout/style') ? Mage::helper('sebian')->getCfgLayout('layout/style') : 'stretched';
$sidebar_style      = Mage::helper('sebian')->getCfg('general/sidebar_mobile') ? Mage::helper('sebian')->getCfg('general/sidebar_mobile') :  'hide';
$grid_style         = Mage::helper('sebian')->getCfg('category_grid/style') ? Mage::helper('sebian')->getCfg('category_grid/style') : 'style_1';
$this->addBodyClass('sidebar-mobile-'.$sidebar_style);
$this->addBodyClass('body-'.$body_style);
if($grid_style == 'style_2'){
    $this->addBodyClass('grid-style-2');
}
if(Mage::getBlockSingleton('page/html_header')->getIsHomePage()) {
	$float_header       = Mage::helper('sebian')->getCfg('header/float_header');
	if($float_header){
		$this->addBodyClass('layout-header-special-active');
		$this->addBodyClass('layout-header-special');
	}
}
?>
<body<?php echo $this->getBodyClass()?' class="'.$this->getBodyClass().'"':'' ?>>
<?php echo $this->getChildHtml('after_body_start') ?>
<div class="wrapper">
    <?php echo $this->getChildHtml('global_notices') ?>
    <div class="page">
        <?php echo $this->getChildHtml('header') ?>
        <?php if($global_top = $this->getChildHtml('arw.layout.global.top')):?>
            <div class="arw_layout_global_top"><?php echo $global_top;?></div>
        <?php endif;?>
        <div class="main-container col1-layout">
            <?php $breadcrumbs = $this->getChildHtml('breadcrumbs');?>
            <div class="arw-page-title<?php echo $breadcrumbs ? ' has-page-title' : ''?>">
                <?php if($breadcrumbs) :?>
                    <div class="arw_breadcrumbs"><div class="container"><?php echo $breadcrumbs;?></div></div>
                <?php endif;?>
            </div>
            <div class="main">
                <?php if($global_messages = $this->getChildHtml('global_messages')) :?>
                    <div class="arw_global_messages"><div class="container"><?php echo $global_messages;?></div></div>
                <?php endif;?>
                <div class="container">
                    <div class="row">
                        <div class="col-main col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <?php if($global_content_top = $this->getChildHtml('arw.layout.content.top')){
                                echo $global_content_top;
                            }?>
                            <?php echo $this->getChildHtml('content') ?>
                            <?php if($global_content_bottom = $this->getChildHtml('arw.layout.content.bottom')){
                                echo $global_content_bottom;
                            }?>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <?php if($global_bottom = $this->getChildHtml('arw.layout.global.bottom')):?>
            <div class="arw_layout_global_bottom"><?php echo $global_bottom;?></div>
        <?php endif;?>
        <?php echo $this->getChildHtml('footer') ?>
        <?php echo $this->getChildHtml('global_cookie_notice') ?>
        <?php echo $this->getChildHtml('before_body_end') ?>
    </div>
</div>
<?php echo $this->getAbsoluteFooter() ?>
</body>
</html>
