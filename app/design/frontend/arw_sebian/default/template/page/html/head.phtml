$configs =  Mage::helper('sebian')->getCfgSectionDesign(Mage::registry('cssgen_store'));
$primary_font_family_group = $configs['font']['primary_font_family_group'];
$primary_font_family_custom = $configs['font']['primary_font_family_custom'];
$primary_font_family = $configs['font']['primary_font_family'];
